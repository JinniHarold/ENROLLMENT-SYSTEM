@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Student Entry</h1>

    @*ID Number TextBox*@
    <div class="form-floating mb-sm-5">
        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">ID Number:</label>
    </div>

    @*First Name TextBox*@
    <div class="form-floating mb-sm-3">
        <input type="text" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">First Name:</label>
    </div>

    @*Middle Name TextBox*@
    <div class="form-floating mb-sm-3">
        <input type="text" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Middle Name:</label>
    </div>

    @*Last Name TextBox*@
    <div class="form-floating mb-sm-3">
        <input type="text" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Last Name:</label>
    </div>

    @*Course Label and Drop Down*@
    <div class="input-group mb-sm-3">
        <label class="input-group-text" for="inputGroupSelect01">Course</label>
        <select class="form-select" id="inputGroupSelect01">
            <option selected>Choose...</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>

    @*Year TextBox*@
    <div class="form-floating mb-sm-3">
        <input type="text" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Year:</label>
    </div>

    @*Remarks Label and Drop Down*@
    <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupSelect01">Remarks</label>
        <select class="form-select" id="inputGroupSelect01">
            <option selected>Choose...</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>

    <input class="btn btn-primary" type="submit" value="Save">
    <input class="btn btn-primary" type="submit" value="Clear">
</div>
